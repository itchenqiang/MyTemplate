<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_view"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        style="@style/match_wrap_view"
        android:layout_marginStart="@dimen/lay_16"
        android:layout_marginTop="@dimen/lay_16"
        android:text="我已注册"
        android:textColor="@color/register_text"
        android:textSize="@dimen/font_20" />

    <EditText
        android:id="@+id/et_username"
        style="@style/input_login_register"
        android:layout_marginTop="@dimen/lay_16"
        android:hint="电子邮件"
        android:textSize="@dimen/font_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_0.5"
        android:layout_marginStart="@dimen/lay_16" />

    <EditText
        android:id="@+id/et_password"
        style="@style/input_login_register"
        android:hint="密码"
        android:textSize="@dimen/font_15" />

    <Button
        style="@style/btn_login_register"
        android:text="退出" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="忘记密码? >" />

    <TextView
        style="@style/match_wrap_view"
        android:layout_marginStart="@dimen/lay_16"
        android:layout_marginTop="30dp"
        android:text="我要注册"
        android:textColor="@color/register_text"
        android:textSize="@dimen/font_20" />

    <Button
        android:id="@+id/bt_create_user"
        style="@style/btn_login_register"
        android:layout_marginTop="10dp"
        android:text="创建用户" />


</LinearLayout>